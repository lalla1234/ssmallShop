page {
  background: #f4f4f4;
  min-height: 100%;
}

.container {
  background: #f4f4f4;
  min-height: 100%;
  width: 100%;
  height: auto;
  overflow: hidden;
}

.top {
  width: 100%;
  height: 400rpx;
  text-align: center;
  margin-top: 220rpx;
}

.img-view {
  width: 100%;
  height: 160rpx;
}

txt-view {
  width: 100%;
  height: 36rpx;
  text-align: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
}

.txt {
    margin-top: 20rpx;
    background-size: 16.656rpx 27rpx;
    display: inline-block;
    height: 36rpx;
    font-size: 32rpx;
    line-height: 36rpx;
    color: black;
}

.txt-integral {
    margin-top: 40rpx;
    background-size: 16.656rpx 27rpx;
    display: inline-block;
    height: 36rpx;
    font-size: 50rpx;
    line-height: 36rpx;
    color: #b4282d;
}

.load-button {
  border: none;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90%;
  height: 90rpx;
  line-height: 98rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 0;
  padding: 0;
  margin: 0;
  margin-left: 5%;
  text-align: center;
  /* padding-left: -5rpx; */
  font-size: 25rpx;
  color: #f4f4f4;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  letter-spacing: 3rpx;
  margin-bottom: 470rpx;
  background-image: linear-gradient(to right, #83f 0%, #38f 100%);
}